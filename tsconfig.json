{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "types": ["node"],
    "target": "es2019",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "outDir": "./dist/build/"
  }
}
